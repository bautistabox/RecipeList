@model List<RecipeList.Shopping.ShoppingListItems>

<!DOCTYPE html>

<html>
<head>
    <title>Shopping List</title>
</head>
<body>
<div align="center">
    <div align="right" style="padding: 5%">
        <div class="btn-group">
            <a class="btn btn-primary" style="color: #fff" href="new">New Shopping List</a>
        </div>
    </div>

    @foreach (var item in Model)
    {
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@item.listName</h5>
                <div class="btn-group">
                    <a class="btn btn-primary" href="edit?listId=@item.listId">Edit</a>
                    <a class="btn btn-primary" href="view?listId=@item.listId">View</a>
                </div>
            </div>
            <div class="card-footer text-muted">
                @item.UpdatedAt
            </div>
        </div>
        <br/>
    }

</div>

</body>
</html>