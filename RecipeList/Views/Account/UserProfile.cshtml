@using RecipeList.Recipe
@model RecipeList.Accounts.ProfileViewModel;

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
    var recipes = (List<Recipe>)ViewData["Recipes"];
}

<script src="https://unpkg.com/ionicons@4.4.4/dist/ionicons.js"></script>
<script src="~/js/rating.js"></script>

<div class="card" style="padding: 15px; width: inherit">
    <div class="row">
        <div class="col-md-12">
            <div>
                <h4>
                    Welcome to @Model.DisplayName's profile
                </h4>
                <div style="display: inline-block">
                    Average Recipe Rating :
                    <div id="avgRecipeRating" style="display: inline-flex; color: #f4a460; font-size: 20px">
                        <script>starRating(@Model.Rating, "avgRecipeRating");</script>
                    </div>
                    <br/><br/>
                </div>
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Recipes</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <br/>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Email</label>
                        </div>
                        <div class="col-md-6">
                            <p>
                                <em>@Model.Email</em>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Display Name</label>
                        </div>
                        <div class="col-md-6">
                            <p>
                                <em>@Model.DisplayName</em>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label>Bio</label><br/>
                            <p>
                                <em>@Model.Bio</em>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <br/>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Number of Recipes</label>
                        </div>
                        <div class="col-md-6">
                            <p>
                                <em>@Model.NumberRecipes</em>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Number of ratings</label>
                        </div>
                        <div class="col-md-6">
                            <p>
                                <em>@Model.NumberRatings</em>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Recipe</th>
                                </tr>
                                </thead>
                                <tbody>
                                @for(var i = 0; i < recipes.Count; i++)
                                {
                                    <tr><td>@(i+1)</td><td><a href="/recipes/page/@recipes[i].Id">@recipes[i].Name</a></td></tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>