@{
    ViewData["Title"] = "Home Page";
}
<style>
    .carousel-inner img {
        width: auto;
        height: 400px;
        max-height: 400px;
    }
</style>
<body>
<div class="text-center">
    <h1 class="display-3" style="color: #f0ead6">Welcome</h1>
</div>

<br/>
<div align="center">
    <div class="btn-group">
        <a class="btn btn-info" href="/account/login">Login</a>
        <a class="btn btn-info" href="/account/register">Get Started</a>
    </div>
</div>
<br/>


<div align="center">
    <div style="width: 55%">
        <div class="card" style="background: #000000">
            <div id="carouselSlides" class="carousel slide" data-ride="carousel" data-interval="3000">
                <ol class="carousel-indicators">
                    <li data-target="#carouselSlides" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselSlides" data-slide-to="1"></li>
                    <li data-target="#carouselSlides" data-slide-to="2"></li>
                    <li data-target="#carouselSlides" data-slide-to="3"></li>
                    <li data-target="#carouselSlides" data-slide-to="4"></li>
                    <li data-target="#carouselSlides" data-slide-to="5"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block" src="/CreateRecipeView.png" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block" src="/newListView.png" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block" src="/profileView.png" alt="Third slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block" src="/RecipeListView.png" alt="Fourth slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block" src="/RecipePageView.png" alt="Fifth slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block" src="/shoppinglistView.png" alt="Sixth slide">
                    </div>

                </div>
            </div>
        </div>
    </div>
    <br/>


</div>
</body>